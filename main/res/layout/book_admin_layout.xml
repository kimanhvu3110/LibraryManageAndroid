<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_admin_layout"
    android:layout_width="190dp"
    android:layout_height="351dp"
    android:layout_margin="1.5dp"
    android:layout_marginLeft="1dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/pictureBook"
        android:layout_width="149dp"
        android:layout_height="201dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/demobook" />

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="137dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:text="ID: DRT3442"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pictureBook"
        app:layout_constraintTop_toTopOf="@+id/pictureBook"
        app:layout_constraintVertical_bias="0.734" />

    <Button
        android:id="@+id/update_book_btn"
        android:layout_width="161dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#73BF31"
        android:text="Update Book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>